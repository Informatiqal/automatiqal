{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2021",
        "declaration": true,
        "module": "ES6",
        "noImplicitAny": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}