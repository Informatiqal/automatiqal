{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES6",
        "declaration": true,
        "module": "ES6",
        "noImplicitAny": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2021"
        ],
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}